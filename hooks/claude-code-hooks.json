{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/clawd/skills/claude-code-learner/hooks/on-prompt-reminder.md >&2"
          },
          {
            "type": "command",
            "command": "bash ~/clawd/skills/claude-code-learner/scripts/check_spec_init.sh >&2"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/clawd/skills/claude-code-learner/scripts/on_session_stop.sh"
          }
        ]
      }
    ]
  }
}
