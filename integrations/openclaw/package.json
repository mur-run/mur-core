{
  "name": "@mur-run/openclaw-skill",
  "version": "1.12.1",
  "description": "OpenClaw skill for mur-core — continuous learning for AI assistants",
  "keywords": [
    "openclaw",
    "skill",
    "mur-core",
    "ai-cli",
    "continuous-learning",
    "patterns"
  ],
  "author": "karajanchang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mur-run/mur-core.git",
    "directory": "integrations/openclaw"
  },
  "openclaw": {
    "type": "skill",
    "name": "mur",
    "displayName": "mur-core",
    "description": "Continuous learning for AI assistants — sync patterns, search knowledge, manage learning",
    "commands": [
      {
        "name": "status",
        "description": "Show mur status overview",
        "exec": "mur status"
      },
      {
        "name": "sync",
        "description": "Smart sync patterns to cloud/git + local AI CLIs",
        "exec": "mur sync"
      },
      {
        "name": "search",
        "description": "Semantic search across local and community patterns",
        "exec": "mur search"
      },
      {
        "name": "learn",
        "description": "List and manage learned patterns",
        "exec": "mur learn list"
      },
      {
        "name": "stats",
        "description": "Show pattern usage analytics",
        "exec": "mur stats"
      },
      {
        "name": "transcripts",
        "description": "Browse AI coding session transcripts",
        "exec": "mur transcripts"
      },
      {
        "name": "doctor",
        "description": "Diagnose setup and fix common issues",
        "exec": "mur doctor"
      },
      {
        "name": "feedback",
        "description": "Rate pattern effectiveness",
        "exec": "mur feedback"
      }
    ],
    "requirements": [
      {
        "type": "binary",
        "name": "mur",
        "installHint": "Install mur-core: go install github.com/mur-run/mur-core/cmd/mur@latest"
      }
    ]
  }
}
